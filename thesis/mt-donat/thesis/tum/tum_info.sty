\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{\PathToTumTemplate/tum/tum_info}[2017/03/30 Chair informations]



%% full visible names
\providecommand{\ChairName}[2]{
	\gdef\theChairNameGer{#1}
	\gdef\theChairNameEn{#2}
}

\providecommand{\DepartmentName}[2]{
	\gdef\theDepartmentNameGer{#1}
	\gdef\theDepartmentNameEn{#2}
}

\providecommand{\UniversityName}[2]{
	\gdef\theUniversityNameGer{#1}
	\gdef\theUniversityNameEn{#2}
}


%% Abbreviations
\providecommand{\ChairAbbr}[1]{\gdef\theChairAbbr{#1}}
\providecommand{\DepartmentAbbr}[1]{\gdef\theDepartmentAbbr{#1}}
\providecommand{\UniversityAbbr}[1]{\gdef\theUniversityAbbr{#1}}



% additional information macros
% \todo should these go somewhere else?
\providecommand{\Semester}[1]{
	\gdef\theSemester{#1}
}

\providecommand{\ProfessorName}[1]{
	\gdef\theProfessorName{#1}
}

\providecommand{\SupervisorName}[1]{
	\gdef\theSupervisorName{#1}
}



%% Language Settings
\AtBeginDocument{
	% \expandafter\selectlanguage\expandafter{\thelanguage}

	%% set names according to language
	\RequirePackage{iflang}
	\IfLanguageName{ngerman}
	{
		\gdef\theChairName{\theChairNameGer}
		\gdef\theDepartmentName{\theDepartmentNameGer}
		\gdef\theUniversityName{\theUniversityNameGer}
	}{
		\gdef\theChairName{\theChairNameEn}
		\gdef\theDepartmentName{\theDepartmentNameEn}
		\gdef\theUniversityName{\theUniversityNameEn}
	}	
}




